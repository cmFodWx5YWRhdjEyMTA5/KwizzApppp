<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.DashboardFragment">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:background="@drawable/round_corner_button">
                <ImageView
                    android:layout_margin="@dimen/dimen_16dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/games_controller_white"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TitleText"
                    android:text="Play"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/round_corner_button"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">
                <ImageView
                    android:layout_gravity="start|center"
                    android:layout_margin="@dimen/dimen_16dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/games_achievements_white"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TitleText"
                    android:text="Achievements"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/round_corner_button"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">
                <ImageView
                    android:layout_gravity="start|center"
                    android:layout_margin="@dimen/dimen_16dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/games_leaderboards_white"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TitleText"
                    android:text="Leaderboards"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/round_corner_button"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">
                <ImageView
                    android:layout_gravity="start|center"
                    android:layout_margin="@dimen/dimen_16dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_wallet"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TitleText"
                    android:text="Wallet"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/round_corner_button"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">
                <ImageView
                    android:layout_gravity="start|center"
                    android:layout_margin="@dimen/dimen_16dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout_variant"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TitleText"
                    android:text="Sign Out"
                    android:textColor="@color/white"/>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>