<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space10dp"
            android:padding="@dimen/space10dp">

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/space10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageButtonPreviousQues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="@dimen/space10dp"
                            android:rotation="180"
                            android:src="@drawable/navigate" />

                        <TextView
                            android:id="@+id/textViewNoOfQues"
                            style="@style/DescriptionText"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/space10dp"
                            android:text="No Of Questions" />

                        <ImageView
                            android:id="@+id/imageButtonNextQues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="@dimen/space10dp"
                            android:src="@drawable/navigate" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageButtonPreviousSubject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="@dimen/space10dp"
                            android:rotation="180"
                            android:src="@drawable/navigate" />

                        <TextView
                            android:id="@+id/textViewSubjectSinglePlay"
                            style="@style/DescriptionText"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/space10dp"
                            android:text="Subject" />

                        <ImageView
                            android:id="@+id/imageButtonNextSubject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="@dimen/space10dp"
                            android:src="@drawable/navigate" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <Button
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space10dp"
                    style="@style/ThemeButton"
                    android:id="@+id/buttonStart"
                    android:background="@color/primaryColor"
                    android:padding="8dp"
                    android:text="Start"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>