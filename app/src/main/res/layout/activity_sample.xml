<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space10dp"
            android:padding="@dimen/space10dp">

            <LinearLayout
                android:layout_marginTop="@dimen/space10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <android.support.design.widget.TextInputLayout
                    android:layout_margin="@dimen/space10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/inputPoints"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter Points"/>

                </android.support.design.widget.TextInputLayout>


                <Button
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space10dp"
                    style="@style/ThemeButton"
                    android:id="@+id/postScore"
                    android:background="@color/primaryColor"
                    android:padding="8dp"
                    android:text="Pay"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space10dp"
                    style="@style/ThemeButton"
                    android:id="@+id/leaderboards"
                    android:background="@color/primaryColor"
                    android:padding="8dp"
                    android:text="Leaderboards"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>